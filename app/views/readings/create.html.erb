<%= form_tag '/', :method => 'get' do %>
  <p>
    <%= text_field_tag :name, params[:name], size: 10 %>
    <%= text_field_tag :user_id, params[:user_id], size: 10 %>
    <%= submit_tag "Create", :name => nil %>
  </p>
<% end %>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for (@reading, :as => :post) do |f| %>
		    <%= f.label :user_id %>
		    <%= f.text_field :user_id %>

		    <%= f.label :name %>
		    <%= f.text_field :name %>

		    <%= f.submit "Create" %>
		<% end %>
	</div>
</div>

